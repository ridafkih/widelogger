{
  "name": "lab",
  "private": true,
  "workspaces": {
    "packages": [
      "applications/*",
      "packages/*",
      "services/*"
    ]
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf --glob **/.turbo/",
    "dev": "turbo run dev //#dev:root",
    "dev:root": "docker compose up --build",
    "types": "turbo run types",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "unused": "knip"
  },
  "devDependencies": {
    "knip": "5.82.1",
    "rimraf": "^6.1.2",
    "turbo": "2.7.6"
  },
  "packageManager": "bun@1.3.7"
}
