{
  "name": "lab",
  "license": "AGPL-3.0",
  "private": true,
  "workspaces": {
    "packages": [
      "applications/*",
      "packages/*",
      "services/*"
    ]
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf --glob **/.turbo/",
    "dev": "turbo run dev //#dev:root",
    "dev:root": "docker compose up --build --watch",
    "types": "turbo run types",
    "build": "turbo run build",
    "test": "turbo run test",
    "unused": "knip",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/bun": "^1.3.8",
    "knip": "5.83.1",
    "lefthook": "^2.1.0",
    "rimraf": "^6.1.2",
    "turbo": "2.8.3",
    "ultracite": "7.1.5"
  },
  "packageManager": "bun@1.3.8",
  "dependencies": {
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3"
  }
}
