{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": ["**/dist/**", "**/.next/**", "**/.turbo/**", "containers/**"],
  "workspaces": {
    "packages/*": {
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/widelogger": {
      "project": ["src/**/*.{ts,tsx}"],
      "ignoreDependencies": ["pino-pretty"]
    },
    "packages/ui": {
      "entry": ["src/components/*.tsx", "src/utils/*.ts", "src/hooks/*.ts"],
      "project": ["src/**/*.{ts,tsx,css}"],
      "ignoreDependencies": ["next"]
    },
    "packages/database": {
      "entry": ["src/schema/*.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["src/migrations/**", "drizzle.config.ts"],
      "drizzle": false
    },
    "packages/browser-protocol": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/multiplayer-client": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/multiplayer-sdk": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/multiplayer-server": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/typescript-config": {
      "entry": [],
      "project": []
    },
    "services/api": {
      "entry": ["src/routes/**/*.ts"],
      "project": ["src/**/*.ts"],
      "ignoreBinaries": ["pino-pretty"]
    },
    "services/browser-daemon": {
      "entry": ["src/routes/**/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "services/mcp": {
      "entry": ["src/tools/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "services/platform-bridge": {
      "project": ["src/**/*.ts"]
    },
    "services/proxy": {
      "project": ["src/**/*.ts"]
    },
    "applications/web": {
      "entry": ["src/app/**/page.tsx", "src/app/**/layout.tsx"],
      "project": ["src/**/*.{ts,tsx,css}", "*.config.{ts,mjs}"],
      "ignore": ["**/.next/**"]
    }
  }
}
